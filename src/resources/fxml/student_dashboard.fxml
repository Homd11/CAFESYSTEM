<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.StudentDashboardController" style="-fx-background-color: linear-gradient(#f9fafc, #eef2f7);">
   <top>
      <!-- Top Navigation Bar -->
      <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="top-bar" style="-fx-background-color: linear-gradient(#8B0000, #b33939);">
         <children>
            <Label fx:id="welcomeLabel" text="Welcome, Student!" textFill="WHITE">
               <font>
                  <Font name="Arial Bold" size="18.0" />
               </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="loyaltyPointsLabel" text="Loyalty Points: 0" textFill="WHITE">
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
            </Label>
            <Button fx:id="logoutButton" onAction="#handleLogout" text="ðŸšª Logout" styleClass="button danger" />
         </children>
      </HBox>
   </top>
   <center>
      <SplitPane dividerPositions="0.5">
         <items>
            <!-- Menu Section -->
            <VBox spacing="10.0">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="10.0" top="20.0" />
               </padding>
               <children>
                  <Label text="ðŸ“‹ Menu" styleClass="heading" />

                  <!-- Category Filter -->
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label text="Category:" />
                        <ComboBox fx:id="categoryCombo" onAction="#handleCategoryFilter" prefWidth="150.0" />
                        <Button fx:id="refreshMenuButton" onAction="#refreshMenu" text="ðŸ”„ Refresh" styleClass="button primary" />
                     </children>
                  </HBox>

                  <!-- Menu List -->
                  <ListView fx:id="menuListView" VBox.vgrow="ALWAYS" />

                  <!-- Add to Cart Section -->
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <Label text="Quantity:" />
                        <Spinner fx:id="quantitySpinner" prefWidth="80.0" />
                        <Button fx:id="addToCartButton" onAction="#handleAddToCart" text="ðŸ›’ Add to Cart" styleClass="button success" />
                     </children>
                  </HBox>
               </children>
            </VBox>

            <!-- Cart Section as BorderPane -->
            <BorderPane>
               <padding>
                  <Insets bottom="20.0" left="10.0" right="20.0" top="20.0" />
               </padding>
               <top>
                  <VBox spacing="10.0">
                     <children>
                        <Label text="ðŸ›’ Your Cart" styleClass="heading" />
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Button fx:id="removeFromCartButton" onAction="#handleRemoveFromCart" text="âŒ Remove Selected" styleClass="button danger" />
                              <Button fx:id="clearCartButton" onAction="#handleClearCart" text="ðŸ—‘ï¸ Clear Cart" styleClass="button" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </top>
               <center>
                  <TableView fx:id="cartTable">
                     <columns>
                        <TableColumn fx:id="cartItemCol" text="Item" />
                        <TableColumn fx:id="cartQtyCol" text="Qty" maxWidth="80.0" minWidth="60.0" />
                        <TableColumn fx:id="cartUnitCol" text="Unit" />
                        <TableColumn fx:id="cartLineTotalCol" text="Total" />
                     </columns>
                  </TableView>
               </center>
               <bottom>
                  <VBox spacing="12.0">
                     <padding>
                        <Insets top="10.0" />
                     </padding>
                     <!-- Loyalty Section -->
                     <VBox spacing="8.0" styleClass="card">
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <Label text="Use Points:" />
                           <TextField fx:id="pointsTextField" promptText="Enter points" prefWidth="140.0" />
                           <Button fx:id="applyPointsButton" onAction="#handleApplyPoints" text="Apply" styleClass="button primary" />
                        </HBox>
                        <Label fx:id="discountLabel" text="Discount Applied: 0.00 EGP" styleClass="text-success" />
                     </VBox>

                     <!-- Payment Section -->
                     <VBox spacing="8.0" styleClass="card">
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <Label text="Method:" />
                           <ComboBox fx:id="paymentMethodCombo" prefWidth="200.0" />
                        </HBox>
                        <Label fx:id="totalLabel" text="Total: 0.00 EGP" styleClass="text-danger">
                           <font>
                              <Font name="Arial Bold" size="18.0" />
                           </font>
                        </Label>
                        <Button fx:id="placeOrderButton" onAction="#handlePlaceOrder" prefHeight="45.0" text="ðŸ½ï¸ Place Order" styleClass="button primary" />
                     </VBox>
                  </VBox>
               </bottom>
            </BorderPane>
         </items>
      </SplitPane>
   </center>
   <bottom>
      <!-- Order History Section -->
      <VBox spacing="10.0">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
         </padding>
         <children>
            <Label text="ðŸ“œ Order History" styleClass="heading" />
            <TableView fx:id="orderHistoryTable" prefHeight="150.0">
               <columns>
                  <TableColumn fx:id="orderIdColumn" prefWidth="80.0" text="Order ID" />
                  <TableColumn fx:id="orderDateColumn" prefWidth="150.0" text="Date" />
                  <TableColumn fx:id="orderItemsColumn" prefWidth="300.0" text="Items" />
                  <TableColumn fx:id="orderTotalColumn" prefWidth="100.0" text="Total" />
                  <TableColumn fx:id="orderStatusColumn" prefWidth="100.0" text="Status" />
               </columns>
            </TableView>
         </children>
      </VBox>
   </bottom>
</BorderPane>
